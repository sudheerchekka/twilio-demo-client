    <div class="container">
      <fieldset>
        <form action="/" method="post">
          <input name="cust_phone" type="text" class="ghost-input" placeholder="Enter a phone number" required>
          <select class="selectpicker" data-style="btn-info" name="msgPicker">
            <optgroup label="Select Table">
                <option name="" value="0">Select a messages</option>
                <option name="table1" value="Our represetative will give you a call shortly">Our represetative will give you a call shortly</option>
                <option name="table2" value="How can I help you ?">How can I help you ?</option>
                <option name="table3" value="Thank you for selecting us">Thank you for selecting us</option>
            </optgroup>
        </select>
          <input type="submit"  value="Send Text">
        </form>

        <% if(result !== null){ %>
          <p><%= result %></p>
        <% } %>

        <% if(error !== null){ %>
          <p><%= error %></p>
        <% } %>

        <p id="wsResult"> </p>

        <script>
          var ws = new WebSocket('ws://localhost:40510');
      
          ws.onopen = function () {
              console.log('websocket is connected ...')
              ws.send('connected')
          }
      
          ws.onmessage = function (ev) {
              console.log(ev);
              document.getElementById("wsResult").innerHTML = ev.data;
          }
      </script>

        </fieldset>
    </div>
